apiVersion: rhdh.redhat.com/v1alpha2
kind: Backstage
metadata:
  name: {{ instance_name }}
  namespace: {{ app_namespace}}
spec:
  application:
    appConfig:
      mountPath: /opt/app-root/src
    extraFiles:
      mountPath: /opt/app-root/src
    replicas: 1
    route:
      enabled: true
  database:
    enableLocalDb: true
